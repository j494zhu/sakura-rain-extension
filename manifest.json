{
    "manifest_version": 3,
    "name": "Sakura Rain Effect",
    "version": "1.0",
    "description": "A 100% customizable, lightweight sakura rain effect for any webpage.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "react-popup/dist/index.html",
        "default_title": "Custom Settings",
        "default_icon": "icon.png"

    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [],
            "js": [
                "js/Utils.js",
                "js/Config.js",
                "js/SakuraPetal.js",
                "js/SakuraManager.js",
                "js/main.js"
            ],
            "run_at": "document_idle"
        }
    ]
}